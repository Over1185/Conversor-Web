<style>
  .header {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(226, 232, 240, 0.8);
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 50;
    grid-area: header;
    width: 100%;
    max-width: 100vw;
    box-sizing: border-box;
    overflow-x: hidden;
  }

  .header-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    box-sizing: border-box;
  }

  .logo-section {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-shrink: 0;
  }

  .logo {
    border-radius: 8px;
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }

  .logo:hover {
    transform: scale(1.1);
  }

  .brand-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1e293b;
    margin: 0;
    white-space: nowrap;
  }

  .navigation {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }

  .nav-list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .nav-item {
    display: flex;
    flex-shrink: 0;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    text-decoration: none;
    color: #64748b;
    font-weight: 500;
    font-size: 0.875rem;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .nav-link:hover {
    color: #3b82f6;
    background: rgba(59, 130, 246, 0.1);
  }

  .nav-icon {
    width: 1rem;
    height: 1rem;
    flex-shrink: 0;
  }

  @media (max-width: 640px) {
    .header-content {
      padding: 0 1rem;
    }

    .brand-name {
      font-size: 1.25rem;
    }

    .nav-list {
      gap: 0.75rem;
    }

    .nav-link {
      padding: 0.5rem 0.75rem;
      font-size: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .header-content {
      padding: 0 0.75rem;
    }

    .logo-section {
      gap: 0.5rem;
    }

    .brand-name {
      font-size: 1.125rem;
    }

    .nav-list {
      gap: 0.5rem;
    }

    .nav-link {
      padding: 0.5rem;
      font-size: 0.6875rem;
    }

    .nav-link span {
      display: none;
    }
  }
</style>
